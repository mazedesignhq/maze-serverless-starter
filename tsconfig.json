{
  "files": ["src/handlers.ts"],
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "outDir": "./.build",
    "sourceMap": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
